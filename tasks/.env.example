# Tasks Service Configuration
TASKS_PORT=5001
TASKS_HOST=0.0.0.0
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///tasks.db

# Main Slack Bot API (for integration)
SLACK_BOT_API_URL=http://localhost:8080
SLACK_BOT_API_KEY=your-api-key-here

# Slack API (for user import jobs)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# Google Drive API (for document ingestion jobs)
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_TOKEN_PATH=token.json

# Metrics API (placeholder for future integration)
METRICS_API_URL=https://api.example.com
METRICS_API_KEY=your-metrics-api-key

# Scheduler Configuration
SCHEDULER_TIMEZONE=UTC
SCHEDULER_JOB_DEFAULTS_COALESCE=true
SCHEDULER_JOB_DEFAULTS_MAX_INSTANCES=1
SCHEDULER_EXECUTORS_THREAD_POOL_MAX_WORKERS=20
