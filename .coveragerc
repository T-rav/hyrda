[run]
source = src
omit = 
    # CLI scripts - not covered by unit tests
    src/ingest_documents.py
    src/migrate.py
    src/app.py
    # Test files
    src/tests/*
    # External libraries
    */site-packages/*
    */venv/*

[report]
# Fail under 70% coverage (realistic for production code with CLI scripts excluded)
fail_under = 70
precision = 2
skip_covered = False
show_missing = True

# Lines to exclude from coverage reporting
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if 0:
    if __name__ == .__main__.:
    if TYPE_CHECKING:

[html]
directory = htmlcov